{
  "schemaVersion": 1,
  "id": "ancientartifacts",
  "version": "${version}",

  "name": "Ancient Artifacts",
  "description": "A mod adding mysterious powerful ancient artifacts to Minecraft!",
  "authors": [
    "Murren"
  ],

  "license": "MIT",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.murren.ancientartifacts.AncientArtifactsMod"
    ],
    "client": [
      "net.murren.ancientartifacts.AncientArtifactsClientMod"
    ]
  },
  "mixins": [
    "ancientartifacts.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "~1.18.1",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
